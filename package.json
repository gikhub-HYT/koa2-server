{
  "name": "koa2-server",
  "version": "1.0.0",
  "description": "a webServer based koa2",
  "main": "app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --inspect src/app.js ",
    "test": "cross-env NODE_ENV=test nodemon --inspect src/app.js --exitcrash",
    "start": "pm2 start  src/app.js",
    "restart": "pm2 restart src/app.js",
    "reload": "pm2 reload ./pm2.config.js",
    "stop": "pm2 stop src/app.js",
    "monit": "pm2 monit",
    "kill": "pm2 kill",
    "new:module": "node ./generate/module/index.js"
  },
  "keywords": [
    "koa2",
    "node",
    "server"
  ],
  "author": "vshen",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "ioredis": "^4.2.0",
    "jsonwebtoken": "^8.5.0",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-cors": "0.0.16",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3",
    "koa-views": "^6.1.4",
    "log4js": "^3.0.6",
    "mongoose": "^5.4.11",
    "pm2": "^3.5.1",
    "pm2-intercom": "^1.0.0",
    "qs": "^6.6.0",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "lazy-creator": "^1.0.0",
    "nodemon": "^1.18.7"
  }
}